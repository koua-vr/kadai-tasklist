<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |task| %>
          <li><%= task %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.label :status, 'ステータス' %>
  <%= f.select :status, [["未実施", "unexecuted"], ["実施中", "progress"], ["完了", "done"]],  :prompt => "選択してください" %>
  <br />

  <%= f.label :content, '　　タスク' %>
  <%= f.text_field :content %>

  <%= f.submit '投稿' %>
<% end %>